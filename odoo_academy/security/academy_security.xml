<?xml version="1.0" encoding="UTF-8" ?>
<!--aqui se crea un grupo para un modulo en odoo, el artibuto del modelo-->
<odoo>
    <record id="group_academy_admin" model="res.groups">
        <field name='name'>Academy/Admin</field>
    </record>
    <!--Aqui se crea una regla de registro -->
    <record id="only_active_modify" model="ir.rule">
        <field name= "name"> Only Active Course Can Be Modified</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">[('active','=','True')]</field>
        <field name="model_id" ref="model_academy_course"/>
    </record>
</odoo>